#! /bin/bash

bookstack_dir=$(readlink -f "$(dirname $(which $0))/..")

cd "$bookstack_dir"
needs_update=$(docker-compose images | tail -n +3 | awk '{ if ( $3 == "<none>" ) { print "yes" } }')
if [ ! -z "$needs_update" ]; then
    docker-compose down
    docker-compose up -d

    docker-compose -f "${bookstack_dir}/../nginx/docker-compose.yml" restart
    echo "Bookstack docker has been updated." 1>&2
else
    echo "Image SHA hasn't changed, keeping the container running." 1>&2
fi
